<script>
    $(document).ready(function () {
        $('#menu-home').addClass('active');

        var firstTime = true
        var starting = {
            pages: 0,
            notification: 0,
            response: 0,
            contacts: 0
        }

        FireBaseApp.database().ref('realtime_administrator').on('value', values => {

          if(values.val()) {
                var val = values.val()

              $('#stats-pages').countTo({
                  from: starting.pages,
                  to: val.listOfAccountWithCall.length,
                  speed: 10000,
                  onComplete: function(value) {
                      starting.pages = value
                  }
              })
              $('#stats-notification').countTo({
                  from: starting.notification,
                  to: val.totalCallRx,
                  speed: 10000,
                  onComplete: function(value) {
                      starting.notification = value
                  }
              })
              $('#stats-response').countTo({
                  from: starting.response,
                  to: val.totalCallTx,
                  speed: 10000,
                  onComplete: function(value) {
                      starting.response = value
                  }
              })
              $('#stats-contacts').countTo({
                  from: starting.contacts,
                  to: val.totalContactProcess,
                  speed: 10000,
                  onComplete: function(value) {
                      starting.contacts = value
                  }
              })

          }

        })
    });
</script>

